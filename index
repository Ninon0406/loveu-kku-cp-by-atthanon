        // ====================================================================
        // END: ข้อมูลกิจกรรม
        // ====================================================================
        
        // ====================================================================
        // ตรรกะของสไลด์โชว์ (CAROUSEL LOGIC)
        // ====================================================================
        
        /**
         * ฟังก์ชันสำหรับจัดการการเลื่อนสไลด์
         * @param {number} n - ทิศทางในการเลื่อน (+1 ไปข้างหน้า, -1 ถอยหลัง)
         */
        function changeSlide(n) {
            currentSlide += n;
            const totalSlides = currentImageUrls.length;

            if (currentSlide >= totalSlides) {
                currentSlide = 0; // วนกลับไปที่สไลด์แรก
            } else if (currentSlide < 0) {
                currentSlide = totalSlides - 1; // วนกลับไปที่สไลด์สุดท้าย
            }

            updateCarousel();
        }

        /**
         * ฟังก์ชันสำหรับอัปเดตการแสดงผลของ Carousel
         */
        function updateCarousel() {
            const slidesContainer = document.getElementById('carousel-slides');
            const indicatorsContainer = document.getElementById('carousel-indicators');
            const totalSlides = currentImageUrls.length;

            if (!slidesContainer || !indicatorsContainer || totalSlides === 0) return;

            // 1. อัปเดตตำแหน่งสไลด์
            const offset = -currentSlide * 100;
            slidesContainer.style.transform = `translateX(${offset}%)`;

            // 2. อัปเดตตัวบ่งชี้ (Indicators)
            Array.from(indicatorsContainer.children).forEach((dot, index) => {
                dot.classList.remove('bg-blue-500');
                dot.classList.add('bg-gray-300', 'hover:bg-gray-400');
                if (index === currentSlide) {
                    dot.classList.remove('bg-gray-300', 'hover:bg-gray-400');
                    dot.classList.add('bg-blue-500');
                }
            });
            
            // 3. อัปเดตตัวนับสไลด์
            document.getElementById('slide-counter').textContent = `${currentSlide + 1} / ${totalSlides}`;
        }
        
        /**
         * ฟังก์ชันสำหรับสร้างสไลด์และ Indicators
         */
        function initializeCarousel(imageUrls) {
            const slidesContainer = document.getElementById('carousel-slides');
            const indicatorsContainer = document.getElementById('carousel-indicators');
            
            slidesContainer.innerHTML = ''; // ล้างสไลด์ก่อนหน้า
            indicatorsContainer.innerHTML = ''; // ล้างตัวบ่งชี้ก่อนหน้า
            currentSlide = 0; // รีเซ็ตดัชนีสไลด์

            imageUrls.forEach((url, index) => {
                // สร้างสไลด์ (เพิ่ม flex centering เพื่อให้รูปภาพ object-contain อยู่ตรงกลาง)
                const slide = document.createElement('div');
                slide.className = 'carousel-slide p-2 sm:p-4 flex justify-center items-center'; // เพิ่ม padding สำหรับรูปภาพด้านใน
                slide.innerHTML = `<img src="${url}" alt="รูปภาพกิจกรรม ${index + 1}" class="w-full h-full object-contain rounded-lg shadow-xl" onerror="this.onerror=null;this.src='https://placehold.co/800x600/F0F8FF/007bff?text=ไม่พบรูปภาพ';">`;
                slidesContainer.appendChild(slide);

                // สร้างจุดบ่งชี้
                const dot = document.createElement('button');
                dot.className = 'w-3 h-3 rounded-full mx-1 transition-colors duration-200';
                dot.setAttribute('onclick', `goToSlide(${index})`);
                indicatorsContainer.appendChild(dot);
            });
            
            updateCarousel(); // การแสดงผลเริ่มต้น
        }
        
        /**
         * ฟังก์ชันสำหรับเปลี่ยนสไลด์ไปยัง Index ที่ต้องการ
         * @param {number} index - index ของสไลด์ที่ต้องการไป
         */
        function goToSlide(index) {
            currentSlide = index;
            updateCarousel();
        }
        
        // ====================================================================
        // END ตรรกะของสไลด์โชว์
        // ====================================================================


        document.addEventListener('DOMContentLoaded', () => {
            const observer = new IntersectionObserver((entries, observer) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.style.opacity = '1';
                        entry.target.style.transform = 'translateY(0)';
                        observer.unobserve(entry.target);
                    }
                });
            }, { threshold: 0.1 });

            document.querySelectorAll('section').forEach(section => {
                section.classList.add('section-animate');
                observer.observe(section);
            });
            
            // ตั้งค่าสถานะเริ่มต้นสำหรับพื้นหลัง Navbar แบบ Sticky
            const navbar = document.getElementById('navbar');
            const header = document.getElementById('top');
            
            const updateNavBackground = () => {
                if (window.scrollY > header.offsetHeight - navbar.offsetHeight - 50) {
                    navbar.classList.remove('bg-white/95');
                    navbar.classList.add('bg-white');
                    navbar.classList.add('shadow-lg');
                } else {
                    navbar.classList.add('bg-white/95');
                    navbar.classList.remove('shadow-lg');
                }
            };
            
            // ตรวจสอบตำแหน่งการเลื่อนเมื่อโหลดและเมื่อมีการเลื่อน
            updateNavBackground();
            window.addEventListener('scroll', updateNavBackground);
        });

        /**
         * ฟังก์ชันสำหรับเปิด Modal แสดงรูปภาพเต็ม (สำหรับเกียรติบัตรเท่านั้น)
         * @param {string} imgId - ID ของ Element รูปภาพที่ถูกคลิก
         */
        function openImageModal(imgId) {
            const imgElement = document.getElementById(imgId);
            const modal = document.getElementById('image-modal');
            const modalImage = document.getElementById('modal-image');
            
            if (imgElement && modal && modalImage) {
                modalImage.src = imgElement.src;
                modal.classList.remove('hidden');
                setTimeout(() => modal.classList.add('opacity-100'), 10);
            } else {
                console.error('ไม่พบองค์ประกอบ Image Modal หรือรูปภาพเป้าหมาย');
            }
        }

        // ฟังก์ชันสำหรับปิด Image Modal
        function closeImageModal() {
            const modal = document.getElementById('image-modal');
            if (modal) {
                modal.classList.remove('opacity-100');
                setTimeout(() => modal.classList.add('hidden'), 300); 
            }
        }

        /**
         * ฟังก์ชันสำหรับเปิด Modal แสดงรายละเอียดกิจกรรม (สำหรับกิจกรรมและโครงงาน)
         * @param {string} itemId - ID ของ Activity/Project ใน activityDetails object
         */
        function openDetailModal(itemId) {
            const data = activityDetails[itemId];
            const modal = document.getElementById('detail-modal');
            
            if (!data || !data.imageUrls || data.imageUrls.length === 0) {
                console.error(`ไม่พบข้อมูลรายละเอียดสำหรับ ID '${itemId}' หรือไม่มีรูปภาพ`);
                return;
            }
            
            // กำหนด Array รูปภาพส่วนกลางสำหรับตรรกะสไลด์โชว์
            currentImageUrls = data.imageUrls;

            // กรอกเนื้อหา Modal
            document.getElementById('detail-title').textContent = data.title;
            document.getElementById('detail-role').textContent = data.role;
            document.getElementById('detail-type').textContent = data.type;
            document.getElementById('detail-description').textContent = data.description;
            
            // เริ่มต้นสไลด์โชว์รูปภาพด้วยข้อมูลใหม่
            initializeCarousel(currentImageUrls);

            // แสดง Modal
            modal.classList.remove('hidden');
            setTimeout(() => modal.classList.add('opacity-100'), 10);
        }

        // ฟังก์ชันสำหรับปิด Detail Modal
        function closeDetailModal() {
            const modal = document.getElementById('detail-modal');
            if (modal) {
                modal.classList.remove('opacity-100');
                setTimeout(() => modal.classList.add('hidden'), 300); 
            }
        }
        
        // เพิ่ม Event Listener เพื่อปิด Modal เมื่อคลิกนอกเนื้อหา
        document.addEventListener('click', (e) => {
            const imageModal = document.getElementById('image-modal');
            if (imageModal && !imageModal.classList.contains('hidden') && e.target === imageModal) {
                closeImageModal();
            }
            
            const detailModal = document.getElementById('detail-modal');
            if (detailModal && !detailModal.classList.contains('hidden') && e.target === detailModal) {
                closeDetailModal();
            }
        });
        
        // ====================================================================
        // ตรรกะการสัมผัส/ปัดสำหรับสไลด์โชว์ (รองรับมือถือ)
        // ====================================================================
        let touchStartX = 0;

        function handleTouchStart(e) {
            touchStartX = e.touches[0].clientX;
        }

        function handleTouchMove(e) {
            if (!touchStartX) return;
            const touchEndX = e.touches[0].clientX;
            const diffX = touchStartX - touchEndX;

            if (Math.abs(diffX) > 50) { // เกณฑ์สำหรับการปัด
                if (diffX > 0) {
                    changeSlide(1); // ปัดซ้าย -> สไลด์ถัดไป
                } else {
                    changeSlide(-1); // ปัดขวา -> สไลด์ก่อนหน้า
                }
                touchStartX = 0; // รีเซ็ตหลังจากการปัดสำเร็จ
            }
        }

        document.addEventListener('DOMContentLoaded', () => {
            // ... ตรรกะ DOMContentLoaded ที่มีอยู่ ...
            
            const carousel = document.getElementById('image-carousel-container');
            if (carousel) {
                carousel.addEventListener('touchstart', handleTouchStart, false);
                carousel.addEventListener('touchmove', handleTouchMove, false);
            }
        });
        
    </script>
</head>
<body class="antialiased">

